{
  "expo": {
    "name": "Kerala Kitchen + Smart Pantry",
    "slug": "kerala-kitchen-smart-pantry",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "keralakitchen",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to scan receipts and pantry items",
        "NSPhotoLibraryUsageDescription": "This app accesses photo library to scan receipts and recipe images"
      }
    },
    "android": {
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Kerala Kitchen to access your camera to scan receipts and pantry items."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}